
<div class="m-4 flex">
  <%= form_with url: search_date_path, method: :get do |form| %>
    <%= form.text_field :date, class: "rounded-l-lg p-4 border-t mr-0 border-b border-l text-gray-800 border-gray-200 bg-white" , placeholder: "YYYY-MM-DD" %>
    <%= form.submit 'explore', class: "px-8 rounded-r-lg bg-yellow-400  text-gray-800 font-bold p-4 uppercase border-yellow-500 border-t border-b border-r" %>
  <% end %>
</div>